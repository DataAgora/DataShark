<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/timelineView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="7dp">

        <View
            android:id="@+id/timelineTopLine"
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:background="@color/gray"
            android:layout_marginStart="3dp"/>

        <View
            android:id="@+id/timelineCircle"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/circle_timeline"/>

        <View
            android:id="@+id/timelineBottomLine"
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:background="@color/gray"
            android:layout_marginStart="3dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:textAllCaps="true"
        app:layout_constraintLeft_toRightOf="@id/timelineView"
        app:layout_constraintTop_toTopOf="@id/timelineView"
        app:layout_constraintBottom_toBottomOf="@id/timelineView"
        android:layout_marginStart="7dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:id="@+id/card"
        android:background="@color/white"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/timelineView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:id="@+id/image"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/icon"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sessionName"
            app:layout_constraintLeft_toRightOf="@id/image" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:id="@+id/genre"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintRight_toLeftOf="@id/arrow"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sessionName"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toBottomOf="@id/genre"
            app:layout_constraintBottom_toTopOf="@id/programName"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintRight_toLeftOf="@id/arrow"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/programName"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/sessionName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image"
            app:layout_constraintRight_toLeftOf="@id/arrow"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrow"
            android:src="@drawable/ic_caret_right_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>